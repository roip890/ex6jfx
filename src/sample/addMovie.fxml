            <TextArea fx:id="txtGenres" maxHeight="50.0" maxWidth="190.0" minHeight="50.0" minWidth="190.0" prefHeight="50.0" prefWidth="190.0" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="6">
