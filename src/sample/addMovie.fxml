            <TextField id="txtLength" fx:id="txtImage" maxHeight="25.0" maxWidth="190.0" minHeight="25.0" minWidth="190.0" prefHeight="25.0" prefWidth="190.0" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="90.0" GridPane.columnIndex="0" GridPane.rowIndex="6">
          <children>
            <Label styleClass="whiteFont" text="Image URL:" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="90.0" GridPane.columnIndex="0" GridPane.rowIndex="5">
          <children>
            <Label styleClass="whiteFont" text="Description:" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="5">
          <children>
            <TextField id="txtLength" fx:id="txtDescription" maxHeight="25.0" maxWidth="190.0" minHeight="25.0" minWidth="190.0" prefHeight="25.0" prefWidth="190.0" />
          </children>
        </HBox>
